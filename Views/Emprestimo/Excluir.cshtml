@model EmprestimosModel;

@{
    ViewData["Title"] = "Excluir Empréstimo";
}

<div class="container bg-dark p-5 rounded-8">
    <div class="mb-5 text-center">
        <h1 class="text-light">
            Exclusão de Empréstimo
        </h1>
    </div>
    <form method="POST" asp-controller="Emprestimo" asp-action="Excluir">

        <input type="hidden" asp-for="Id" />
        <h4 class="text-light text-center">Tem certeza que deseja excluir este registro?</h4>
        <div class="mb-3">
            <label for="recebedor" class="form-label text-light">Recebedor:</label>
            <input type="text" class="form-control" asp-for="Recebedor" id="recebedor"
                placeholder="Quem está recebendo o livro" disabled>
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>

        <div class="mb-3">
            <label for="fornecedor" class="form-label text-light">Fornecedor:</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="fornecedor"
                placeholder="Quem está emprestando o livro" disabled>
            <span class="text-danger" asp-validation-for="Fornecedor"></span>
        </div>

        <div class="mb-3">
            <label for="livro" class="form-label text-light">Livro:</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="livro"
                placeholder="Nome do livro emprestado" disabled>
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>
        </div>
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Confirmar Exclusão</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>